                          valid-to     ="2100-01-31 23:59:59"
		          last-modified="2024-12-18 00:00:00">

  <defaults>
    <length unit="meter"/>
    <angle unit="degree"/>  
    <reference-frame>
      <!-- The z-axis is set parallel to and in the direction of the beam. the 
           y-axis points up and the coordinate system is right handed. -->
      <along-beam axis="z"/>
      <pointing-up axis="y"/>
      <handedness val="right"/>
    </reference-frame>
    <default-view axis-view="z-"/>
  </defaults>

  
  <!-- BRIEF DESCRIPTION OF ZOOM INSTRUMENT: 
  
      Data gathered by Diego Alba Venero from the ZOOM instrument drawings
	  This is a hack from the SANS2D_Definition_Tubes.xml
	  all these changes are from the SANS2D IDF
      12/06/09 this version has X & Y coords detector swapped so orientation
          is correct for temporary wiring table
      18/06/09 better distances for detectors and both at L2=4m, front at X=-1.1m
      26/06/09 swap front & rear as names wrong, translate front in opposite direction
      21/07/09 remove the 150mm sideways shift (i.e. back to symmetrical detector coords)
	  to simplify manipulations in Mantid and help allow for detector mapping not quite 
	  as expected.
      01/02/10 very small change to pixel size 191*5.1=974.2=2*487.05 (was 487.4)
	  - note have to swap x= and y= in Anders output list !
      02/04/12 Put in 'no shape monitors' for possible in the future monitors
          with ID 5-8
      04/02/14 start again with gas tube arrays
      14/03/14 correct the active tube length to 1041.4mm, zigzag offset 3mm 
      01/05/24 update positions with measured values on the instrument, redefine position of sample relative to centre of rotation of the sample stack
      18/12/24 adding polarizing neutron optics to IDF
      26/02/25 updated sample and detector position, comments on how to calculate values in relative coordinates, and how to modify TOML file when tank is moving, suggestions for future changes to read back encoded positions   
  -->
  
  
  <!-- LIST OF PHYSICAL COMPONENTS (which the instrument consists of) -->
  
  <!-- source and sample-position components -->

  <component type="source">
    <location />
  </component>
  <type name="source" is="Source" />

  
  <!-- The centre of rotation of the sample stack sits 8.776 from the center of Monitor 1, i.e. z =17.064. At the instrument, the sample center is expected to sit 407.5 from the end of the snout. Use the sample offset in the user file to correct for off-centered sample and/or moved sample stack, 17.3035 should be the position of the standard sample holder position (0.06m away from the safety shutter), the sample offset in the user file is then -0.06 -->
  <component type="some-sample-holder">
    <location z="17.3635"/>
  </component>
  <type name="some-sample-holder" is="SamplePos" />
  
  <!-- polarisation optics components -->
  
  <type name="polarizer" />  
  
  <component type="polarizer" name="short-polarizer">
    <location y="0.0" x="-0.5" z="8.782"/> 
    <parameter name="device-type" type="string"> <value val="supermirror" /> </parameter>
  </component> 

  <type name="flipper" />  
  
  <component type="flipper" name="RF-flipper">
    <location y="0.0" x="-0.5" z="13.0"/>
    <parameter name="device-type" type="string"> <value val="Drabkin" /> </parameter>
  </component>  
  
  <type name="analyzer" />   
  
  <component type="analyzer" name="helium-analyzer">
    <location y="0.0" x="-1.0" z="17.3635"/>
    <parameter name="device-type" type="string"> <value val="MEOP" /> </parameter>
    <parameter name="cell-length"> <value val="0.010" /> </parameter>
  </component> 

  <!-- detector components (including monitors) -->
  
  <component type="monitors" idlist="monitors">
    <location />
  </component>
  
  <type name="monitors">
    <component type="monitor-tbd">
      <!-- position of center of monitor from drawing all distances are relative to monitor 1 position -->
      <location z="8.288" name="monitor1"/>
      <!-- measured distance M1 to M2 is 5.208 -->
      <location z="13.496" name="monitor2"/>
    </component>
    <component type="Moderator-Monitor3">
      <!-- transmission detector, either in or out of beam, measured distance M1 to M3 is 7.700-->
      <location z="15.988" name="monitor3"/>
    </component>
    <component type="monitor-tbd">
      <!-- measured position of M1 to M4 with tank in SC configuration is 9.196 (offset monitor 4 =0), use shift of monitor 4 to account for tank movement. TODO: let z_rear offset act also on M4 for ZOOM-->
      <location z="17.484" name="monitor4"/>
    </component>
	<component type="monitor-tbd">
      <!-- The beamstop monitor is defined to be 20mm in front of the detector (measured 35mm with casing), move_backstop_monitor in mantid/scripts/SANS/sans/algorithm_detail/move_workspaces.py will take care to keep the relative distance to the detector-->
      <location z="20.829" name="monitor5"/>
    </component>        
    
    <!-- Putting in monitors, which are defined in raw/nexus
         files, and have detector IDs, but currently not physically present 
         on the instrument. Defined with no geometric shape, as they do not 
         physically exist, and with a dummy position -->
    <component type="no shape monitor">
      <location z="0" name="placeholder monitor"/>
      <location z="0" name="placeholder monitor"/>
      <location z="0" name="placeholder monitor"/>
      <location z="0" name="placeholder monitor"/>      
	  <location z="0" name="placeholder monitor"/>   
    </component>  
    
  </type>
  
  <type name="monitor-tbd" is="monitor">
    <cylinder id="some-shape">
      <centre-of-bottom-base r="0.0" t="0.0" p="0.0" />
      <axis x="0.0" y="0.0" z="1.0" /> 
      <radius val="0.01" />
      <height val="0.03" />
    </cylinder>   
  </type>
  
  <type name="Moderator-Monitor3" is="monitor">
    <percent-transparency val="99.9" />
    <cuboid id="shape">
      <left-front-bottom-point x="0.0125" y="-0.0125" z="0.0"  />
      <left-front-top-point  x="0.0125" y="-0.0125" z="0.005"  />
      <left-back-bottom-point  x="-0.0125" y="-0.0125" z="0.0"  />
      <right-front-bottom-point  x="0.0125" y="0.0125" z="0.0"  />
    </cuboid>
    <algebra val="shape" />
  </type>  

  <type name="no shape monitor" is="monitor" />   

<!-- 17.3635 is the position of the safety shutter. The measured 4m detector position is 13.061 to M1 (total 21.349), and 8m position to M1 is 17.059 (total 25.347). This is for the standard SC position (z_rear = 0.5) with tank in forward position. In the user file, add z-offset to apply tank displacement and position of detector in tank: [detector.correction.position], i.e. rear_z = 0.5 + (detector position-4m)+tank displacement.  TODO:Mantid should read the actual detector position and add it as an offset automatically. This would need a class ZOOM in mantid/scripts/SANS/isis_instrument.py with methods to get and set detector position/ move components like for the other instruments.
 -->

   <component type="detector-bank" idlist="RearDetector" name="rear-detector">
     <location z="20.849" />
   </component>   

    
 <type name="detector-bank">
 <!-- the horizontal tubes are spaced vertically at 8.1mm intervals, with left and right sets ~3mm displaced -->
 <!-- DAV: I'm not very happy with this. Doesn't it mean that the tubes are 16.2 mm thick??????? -->
 <component type="SANSLeftTube">
    <locations y="-0.7776" y-end="0.7695" n-elements="96" name="left" />
 </component>

<component type="SANSRightTube">
    <locations y="-0.7695" y-end="0.7776" n-elements="96" name="right" />
</component>
 </type>
 
 <type name="SANSLeftTube" outline="yes">
 <component type="pixel">
   <locations x="-0.5192" x-end="0.5222" n-elements="512" />
 </component>
 </type>
 
 <type name="SANSRightTube" outline="yes">
 <component type="pixel">
   <locations x="-0.5222" x-end="0.5192" n-elements="512" />
 </component>
 </type>
 
 <!-- the length of one pixel is assumed 1041.4/512 = 2.033984375mm, the internal radius is less then given here, more like 7.8mm/2 -->
   <type name="pixel" is="detector">
    <cylinder id="cyl-approx">
      <centre-of-bottom-base r="0.0" t="0.0" p="0.0" />
      <axis x="1.0" y="0.0" z="0.0" />
      <radius val="0.00405" />
      <height val="   0.002033984375" />
    </cylinder>
    <algebra val="cyl-approx" />
  </type>
 

  <!-- Monitor & Detector ID Lists, note the "left" tubes are followed by the "right" tubes, 
          in the same order as the y locations list, starting at the bottom 
		  they are numbered dgttppp  where d=1 for rear, 
		                                   g= 1 to 8 for boards/cables 
										   tt= 0 to 23 for tube number on that board
										   ppp=0 to 511 for pixels 
		There are 8 boards of 24 tubes,each 1m long, for each detector.
		note that the spectrum mapping will normally reduce the number of pixels to 256 or 128 
		[note also that the wiring table inverts the raw 0 to 511 pixel numbers to 511 to 0 so we get the correct direction] -->

  <idlist idname="monitors">
    <id start="1" end="10" />  
  </idlist>   
  
