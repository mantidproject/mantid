#include "View.h"

#include "Presenter.h"

#include <QVBoxLayout>
#include <QLabel>
#include <QPushButton>


View::View(QWidget *parent) : QWidget(parent), m_presenter() {
    m_layout = new QVBoxLayout();
    m_button = new QPushButton("Increment", this);
    m_label = new QLabel("0");

    m_layout->addWidget(m_button);
    m_layout->addWidget(m_label);

    connect(m_button, SIGNAL(clicked()), this, SLOT(notifyButtonClicked()));
}

void View::subscribePresenter(IPresenter *presenter) {
  m_presenter = presenter;
}

void View::notifyButtonClicked() {
  // An example event slot which notifies the presenter
  m_presenter->handleButtonClicked();
}

void View::setLabel(std::string const &text) {
  m_label->setText(QString::fromStdString(text));
}
