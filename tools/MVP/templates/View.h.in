#pragma once

#include <string>

#include <QObject>
#include <QWidget>
#include <QVBoxLayout>
#include <QLabel>
#include <QPushButton>


class IPresenter;

class IView {
public:
  virtual ~IView() = default;

  virtual void subscribePresenter(IPresenter *presenter) = 0;

  virtual void setLabel(std::string const &text) = 0;
};

class View final : public QWidget, public IView {
  Q_OBJECT

public:
  View(QWidget *parent);
  ~View() override = default;

  void subscribePresenter(IPresenter *presenter) override;

  void setLabel(std::string const &text) override;

private:
  QVBoxLayout *m_layout;
  QPushButton *m_button;
  QLabel *m_label;
};
