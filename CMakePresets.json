                "CMAKE_BUILD_TYPE": "Debug",
                "ENABLE_PRECOMMIT": "OFF",
                "ENABLE_CPACK": "ON",
                "ENABLE_MANTIDPLOT": "OFF",
                "DOCS_HTML": "ON",
                "ENABLE_CONDA": "ON",
                "COLORED_COMPILER_OUTPUT": "OFF",
