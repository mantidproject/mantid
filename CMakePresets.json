                "CMAKE_FIND_USE_SYSTEM_ENVIRONMENT_PATH": "FALSE",
                "CMAKE_FIND_USE_CMAKE_ENVIRONMENT_PATH": "FALSE",
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "ENABLE_PRECOMMIT": "OFF",
